{
	"name": "intl-watcher",
	"version": "1.2.0",
	"description": "Automated translation key extraction and dictionary management plugin for Next.js",
	"keywords": [
		"cli",
		"i18n",
		"internationalization",
		"intl",
		"localization",
		"next",
		"next.js",
		"react",
		"script",
		"translate",
		"translation"
	],
	"license": "MIT",
	"author": {
		"name": "Christian Ivicevic",
		"email": "mail@christian-ivicevic.com"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/ChristianIvicevic/intl-watcher.git"
	},
	"funding": [
		{
			"type": "individual",
			"url": "https://github.com/sponsors/ChristianIvicevic"
		}
	],
	"files": [
		"LICENSE.md",
		"README.md",
		"lib/",
		"package.json"
	],
	"type": "module",
	"main": "lib/index.js",
	"publishConfig": {
		"provenance": true
	},
	"scripts": {
		"build": "tsup",
		"format": "oxfmt",
		"format:check": "oxfmt --check",
		"lint": "oxlint",
		"lint:fix": "oxlint --fix",
		"lint:github": "oxlint --format=github --deny-warnings",
		"prepare": "husky",
		"test": "FORCE_COLOR=1 vitest",
		"tsc": "tsc",
		"version-package": "changeset version && oxfmt"
	},
	"dependencies": {
		"chokidar": "5.0.0",
		"debounce": "3.0.0",
		"dedent": "1.7.1",
		"lodash": "4.17.23",
		"picocolors": "1.1.1",
		"proper-lockfile": "4.1.2",
		"ts-morph": "27.0.2"
	},
	"devDependencies": {
		"@changesets/cli": "2.29.8",
		"@changesets/get-github-info": "0.7.0",
		"@changesets/types": "6.1.0",
		"@types/fs-extra": "11.0.4",
		"@types/lodash": "4.17.23",
		"@types/node": "24.10.9",
		"@types/proper-lockfile": "4.1.4",
		"@vitest/coverage-v8": "4.0.18",
		"@vitest/ui": "4.0.18",
		"fs-extra": "11.3.3",
		"husky": "9.1.7",
		"lint-staged": "16.2.7",
		"oxfmt": "0.27.0",
		"oxlint": "1.42.0",
		"tsup": "8.5.1",
		"type-fest": "5.4.1",
		"typescript": "5.9.3",
		"vitest": "4.0.18"
	},
	"peerDependencies": {
		"next": "^14.0.0 || ^15.0.0 || ^16.0.0"
	},
	"lint-staged": {
		"*": "oxfmt && oxlint"
	},
	"engines": {
		"node": ">=18.3.0"
	},
	"packageManager": "pnpm@10.28.1"
}
