{
	"name": "intl-watcher",
	"version": "0.0.0",
	"description": "Automated translation key extraction and dictionary management plugin for Next.js",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/ChristianIvicevic/intl-watcher.git"
	},
	"license": "MIT",
	"author": {
		"name": "Christian Ivicevic",
		"email": "mail@christian-ivicevic.com"
	},
	"type": "module",
	"main": "lib/index.js",
	"files": ["LICENSE.md", "README.md", "lib/", "package.json"],
	"scripts": {
		"build": "tsup",
		"format": "biome check --write .",
		"lint": "biome check .",
		"prepare": "husky",
		"test": "vitest",
		"tsc": "tsc"
	},
	"lint-staged": {
		"*": "biome check --write"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@release-it/conventional-changelog": "10.0.0",
		"@types/node": "22.13.10",
		"@vitest/coverage-v8": "3.0.9",
		"husky": "9.1.7",
		"lint-staged": "15.5.0",
		"release-it": "18.1.2",
		"tsup": "8.4.0",
		"typescript": "5.8.2",
		"vitest": "3.0.9"
	},
	"packageManager": "pnpm@10.4.0",
	"engines": {
		"node": ">=18.3.0"
	},
	"publishConfig": {
		"provenance": true
	},
	"pnpm": {
		"onlyBuiltDependencies": ["@biomejs/biome"]
	}
}
